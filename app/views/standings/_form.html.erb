<%= form_for @standing, :html => {:class =>"pure-form pure-form-aligned", :multipart => true } do |f| %>
  <% if @standing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@standing.errors.count, "error") %> prohibited this standing from being saved:</h2>

      <ul>
      <% @standing.errors.full_messages.each do |message| %>
