    <div class="pure-control-group">
      <%= f.label :Pld %>
      <%= f.text_field :Pld, :placeholder => "Pld"  %>
    </div>
    <div class="pure-control-group">
      <%= f.label :W %>
      <%= f.text_field :W, :placeholder => "W"  %>
    </div>
    <div class="pure-control-group">
      <%= f.label :D %>
      <%= f.text_field :D, :placeholder => "D"  %>
    </div>
    <div class="pure-control-group">
      <%= f.label :L %>
      <%= f.text_field :L, :placeholder => "L"  %>
    </div>
    <div class="pure-control-group">
      <%= f.label :GF %>
      <%= f.text_field :GF, :placeholder => "GF"  %>
    </div>
    <div class="pure-control-group">
      <%= f.label :GA %>
      <%= f.text_field :GA, :placeholder => "GA"  %>
    </div>
    <div class="pure-control-group">
      <%= f.label :GD %>
      <%= f.text_field :GD, :placeholder => "GD"  %>
    </div>
    <div class="pure-control-group">
      <%= f.label :Pts %>
      <%= f.text_field :Pts, :placeholder => "Pts"  %>
    </div>
    <div class="pure-control-group">
      <%= f.label :Qualification %>
      <%= f.text_field :Qualification, :placeholder => "Qualification" %>
    </div>
    <div class="pure-controls">
      <button type="submit" class="pure-button pure-button-primary">Submit</button>
    </div>
  </fieldset>
<% end %>
