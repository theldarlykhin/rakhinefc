							</div>
							<ul class="date-a">
								<li style="color:#4c6d8e;"><span>Date:</span><%= @posts.created_at.strftime("%d %b %Y") rescue "-"  %></li>
							</ul>			
						</aside>
						
					</div>
					<div class="col-9">
						<div class="post-title">
							<h1><span><%= @posts.title  rescue "-" %></h1>
						</div>
						<div class="post-content">
							<%= @posts.post_data  rescue "-" %>
