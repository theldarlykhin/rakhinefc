<table class="pure-table pure-table-bordered" id="mytable">
  <thead>
    <tr id="mythead">
      <th colspan="9" ><a>Match</a> </th>
    </tr>
    <tr id="mythead">
      <th>MatchID</th>
      <th>TA Vs TB</th>
      <th>League</th>
      <th>Time/Date</th>
      <th>Stadium</th>
      <th>Result</th>
      <th colspan="3">Can Add New Match
      <%= link_to 'Here!',  new_match_path, :class=>"pure-button pure-button-primary"  %> 
      </th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.match_number %></td>
        <td><%= match.team1 %> Vs <%= match.team2 %></td>
        <td><%= match.league %></td>
        <td><%= match.time %> <%= match.date.strftime("%d/%b/%Y") rescue "-" %></td>
        <td><%= match.stadium %></td>
        <td><%= match.goal1 %> - <%= match.goal2 %></td>
        <td><%= link_to 'Show', match ,:class=>"button-error pure-button" %>
        </td>
        <td><%= link_to 'Edit', edit_match_path(match),:class=>"button-error pure-button" %></td>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' },:class=>"button-error pure-button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>




<div class="bpaginate">
    <%=  will_paginate @v_posts %>
</div>
