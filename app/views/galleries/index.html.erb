


<table class="pure-table pure-table-bordered" id="mytable">
  <thead>
    <tr id="mythead">
      <th colspan="5" ><a>Gallery</a> </th>
    </tr>
    <tr id="mythead">
      <th>Title</th>
      <th>Desc</th>
      <th colspan="3">Can Add New Gallery
      <%= link_to 'Here!',  new_gallery_path, :class=>"pure-button pure-button-primary"  %> 
      </th>
    </tr>
  </thead>

  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>
        <td><%= gallery.name %></td>
        <td><%= gallery.desc[0,50] %>...</td>
        <td><%= link_to 'Show', gallery ,:class=>"button-error pure-button" %>
        </td>
        <td><%= link_to 'Edit', edit_gallery_path(gallery),:class=>"button-error pure-button" %></td>
        <td><%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' },:class=>"button-error pure-button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>




<div class="bpaginate">
    <%=  will_paginate @v_posts %>
