<table class="pure-table pure-table-bordered" id="mytable">
  <thead>
    <tr id="mythead">
      <th colspan="6" ><a>Video</a> </th>
    </tr>
    <tr id="mythead">
      <th>Name</th>
      <th>Desc</th>
      <th>Video</th>
      <th colspan="3">Can Add New Video
      <%= link_to 'Here!',  new_video_path, :class=>"pure-button pure-button-primary"  %> 
      </th>
    </tr>
  </thead>

   <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.name.gsub('/system/videos/videos/', '') %></td>
        <td><%= video.desc.gsub('{"desc"=>"', '').gsub('"}', '') %></td>
        <td><%= link_to 'Show', video, :class=>"button-error pure-button" %></td>
        <td><%= link_to 'Edit', edit_video_path(video), :class=>"button-error pure-button" %></td>
        <td><%= link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?' },:class=>"button-error pure-button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>




<div class="bpaginate">
    <%=  will_paginate @v_posts %>
</div>



